<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_200"
    tools:context=".ui.home.HomeFragment">


    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        android:layout_marginTop="194dp">

    </ProgressBar>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_main_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_card"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">




    </androidx.recyclerview.widget.RecyclerView>


    <LinearLayout
        android:id="@+id/change_favorite_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:background="@drawable/bg_frame"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="29dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change_cartoon*"
            android:textSize="10sp"
            android:textColor="@color/black"
            android:padding="10dp">

        </TextView>

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/baseline_mic_24"
            android:layout_margin="5dp">

        </ImageView>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/change_my_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:background="@drawable/bg_frame"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="120dp"
        android:layout_marginTop="29dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My page"
            android:textSize="10sp"
            android:textColor="@color/black"
            android:padding="10dp">

        </TextView>

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/baseline_pageview_24"
            android:layout_margin="5dp">

        </ImageView>


    </LinearLayout>

   <TextView
       android:id="@+id/btn_from_main_page"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Log in"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       android:layout_marginTop="29dp"
       android:layout_marginEnd="60dp"
       android:textColor="@color/teal_200"
       android:textStyle="bold"
       android:background="@drawable/bg_login"
       android:padding="10dp">

   </TextView>

    <ImageView
        android:id="@+id/log_out_btn"
        android:layout_width="36dp"
        android:layout_height="36dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/baseline_output_24"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="9dp">

    </ImageView>









    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="300dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <androidx.cardview.widget.CardView
            android:id="@+id/titan_tv"
            android:layout_width="160dp"
            android:layout_height="90dp"
            app:cardCornerRadius="28dp"
            android:layout_marginRight="25dp">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ic_launcher_background"
                android:contentDescription="@string/app_name">

            </ImageButton>







        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/boom_tv"
            android:layout_width="160dp"
            android:layout_height="90dp"
            app:cardCornerRadius="28dp">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ic_launcher_background"
                android:contentDescription="@string/app_name">

            </ImageButton>







        </androidx.cardview.widget.CardView>




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="400dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <androidx.cardview.widget.CardView
            android:id="@+id/nicelodian_tv"
            android:layout_width="160dp"
            android:layout_height="90dp"
            app:cardCornerRadius="28dp"
            android:layout_marginRight="25dp">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ic_launcher_background"
                android:contentDescription="@string/app_name">

            </ImageButton>







        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/bain_tv"
            android:layout_width="160dp"
            android:layout_height="90dp"
            app:cardCornerRadius="28dp">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ic_launcher_background"
                android:contentDescription="@string/app_name">

            </ImageButton>







        </androidx.cardview.widget.CardView>




    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_earn"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:padding="12dp"
        app:cardCornerRadius="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lotty_coins"
            android:layout_width="200dp"
            android:layout_height="118dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:layout_margin="10dp">

        </com.airbnb.lottie.LottieAnimationView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="8dp"
            android:text="@string/earn_coins"
            android:textColor="@color/black"
            android:textSize="11dp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/how_more_btn"
            android:layout_width="110dp"
            android:layout_height="38dp"
            android:layout_gravity="end"
            android:layout_marginTop="76dp"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="14dp"
            android:background="@drawable/bg_frame"
            android:gravity="center_horizontal"
            android:padding="6dp"
            android:text="More..."
            android:textColor="@color/black">

        </TextView>


        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="end"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="18dp"
            android:src="@drawable/baseline_arrow_downward_24">

        </ImageView>






    </androidx.cardview.widget.CardView>






</androidx.constraintlayout.widget.ConstraintLayout>