<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:layout_margin="5dp"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/counter_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:background="@drawable/bg_frame"
            android:padding="4dp"
            android:layout_gravity="center_horizontal"/>
        <ImageView
            android:id="@+id/give_scores_btn"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/like_image88"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="4dp">

        <TextView
            android:id="@+id/title_of_scenario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="file title"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="10sp"
            />
        <TextView
            android:id="@+id/url_scenario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="url_scenario"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:visibility="gone"
            />
        <ImageView
            android:id="@+id/image_scenario"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="6dp"
            android:src="@drawable/search_word_02"
            />

    </LinearLayout>


</LinearLayout>